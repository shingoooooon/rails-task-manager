<h1>Task</h1>
  <% if @task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
<%= @task.title %>
<%= @task.details %>
<p><%= link_to "Edit", edit_path(@task), class: 'btn btn-primary' %></p>
<p><%= link_to "Delete", task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete #{@task.title}?" }, class: 'btn btn-primary' %></p>
<p><%= link_to "Back to list", tasks_path, class: 'btn btn-primary' %></p>
