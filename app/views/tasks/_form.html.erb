<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
    <%= f.check_box :completed %>
    <%= f.submit class: 'btn btn-primary mt-3'%>
  </div>
<% end %>
